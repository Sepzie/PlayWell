{
  "name": "playwell",
  "version": "1.0.0",
  "description": "Game time tracking application",
  "main": "electron.main.js",
  "scripts": {
    "dev:renderer": "vite",
    "dev:electron": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "dev": "concurrently -k \"npm run dev:renderer\" \"wait-on http://localhost:5173 && npm run dev:electron\"",
    "build:renderer": "vite build",
    "build": "npm run build:renderer && electron-builder",
    "start": "electron .",
    "test": "npx jest",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "db:seed": "node prisma/seed.js",
    "db:reset": "prisma migrate reset --force",
    "db:reset:seed": "prisma migrate reset --force && node prisma/seed.js"
  },
  "dependencies": {
    "@prisma/client": "^6.16.3",
    "@tanstack/react-table": "^8.21.3",
    "chart.js": "^4.5.0",
    "child-process": "^1.0.2",
    "csvtojson": "^2.0.10",
    "framer-motion": "^12.23.22",
    "jest": "^30.2.0",
    "node-wmi": "^0.0.5",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0"
  },
  "devDependencies": {
    "@rollup/rollup-win32-x64-msvc": "^4.52.3",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.0",
    "electron": "^38.2.0",
    "electron-builder": "^24.13.3",
    "prisma": "^6.16.3",
    "vite": "^5.0.0",
    "wait-on": "^7.0.0"
  },
  "keywords": [
    "electron",
    "react",
    "game-tracking",
    "time-management"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.playwell.app",
    "productName": "PlayWell",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "background/**/*",
      "electron.main.js",
      "electron.tray.js",
      "preload.js",
      "tray-menu.html",
      "src/public/**/*",
      "prisma/**/*",
      "node_modules/.prisma/**/*",
      "node_modules/@prisma/client/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/.prisma/**/*",
      "node_modules/@prisma/client/**/*",
      "prisma/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "src/public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
